clearfix()
    -height: 1%
    *zoom: 1
    display: table
    &:after
        content: '. . . . . . . . . . .'
        display: block
        word-spacing: 99in
        height: 0
        overflow: hidden
        font-size: 0.05em
        line-height: 0.05em

rhythm($lines = 1, $font-size = $BASE_FONT_SIZE, $offset = 0)
    $buf =  $font-size*($lines * $BASE_LINE_HEIGHT - $offset)
    return ($buf/$BASE_FONT_SIZE)

leader($lines = 1)
    $font-size = $BASE_FONT_SIZE
    if @font-size
        $font-size = @font-size
    margin-top: rhythm($lines, $font-size)

trailer($lines = 1)
    $font-size = $BASE_FONT_SIZE
    if @font-size
        $font-size = @font-size
    margin-bottom: rhythm($lines, $font-size)

padding-leader($lines = 1)
    $font-size = $BASE_FONT_SIZE
    if @font-size
        $font-size = @font-size
    padding-top: rhythm($lines, $font-size)

padding-trailer($lines = 1)
    $font-size = $BASE_FONT_SIZE
    if @font-size
        $font-size = @font-size
    padding-bottom: rhythm($lines, $font-size)

adjust-font-size($font-size = $BASE_FONT_SIZE, $lines = 1)
    font-size: $font-size
    $line-height = rhythm($lines, $font-size)
    if $font-size == '13px' or $font-size == '12px' or $font-size == '13px'
        $line-height = 1.3
    line-height: $line-height
